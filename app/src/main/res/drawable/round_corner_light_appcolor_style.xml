<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/light_app_color" />

            <corners
                android:bottomLeftRadius="@dimen/common_3"
                android:bottomRightRadius="@dimen/common_3"
                android:topLeftRadius="@dimen/common_3"
                android:topRightRadius="@dimen/common_3" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/light_app_color"
                android:startColor="@color/light_app_color"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="@dimen/common_3"
                android:bottomRightRadius="@dimen/common_3"
                android:topLeftRadius="@dimen/common_3"
                android:topRightRadius="@dimen/common_3" />
        </shape>
    </item>

</layer-list>