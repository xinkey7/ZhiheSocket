<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1.0px" android:color="@color/dialog_item_bg" />
            <solid android:color="@color/dialog_item_bg" />
            <corners android:bottomLeftRadius="@dimen/common_radius" android:bottomRightRadius="@dimen/common_radius" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1.0px" android:color="@color/white" />
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/common_radius" android:bottomRightRadius="@dimen/common_radius" />
        </shape>
    </item>
</selector>