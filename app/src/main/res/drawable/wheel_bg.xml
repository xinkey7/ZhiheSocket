<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#EEE"
                android:endColor="#DDD"
                android:startColor="#DDD" />

            <stroke
                android:width="1dp"
                android:color="#FFDDDDDD" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="4dp"
        android:right="4dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#FCFAF7"
                android:endColor="#FCFAF7"
                android:startColor="#FCFAF7" />
        </shape>
    </item>

</layer-list>